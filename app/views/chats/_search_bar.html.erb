<%= form_with url: search_chats_path, method: :get, class: "relative p-4 h-20 flex items-center border-t border-t-blue-50 border-b border-b-blue-100", data: { turbo_frame: "sidebar_chats" } do %>
  <%= text_field_tag :query,
                      params[:query],
                      autocomplete: "off",
                      placeholder: "Search users...",
                      class: "w-full px-4 py-2 border-none bg-gray-100 placeholder:text-gray-400 rounded-full focus:outline-none focus:border-blue-200" %>
  <%= button_tag type: "submit", name: nil, class: "absolute inset-y-0 right-0 flex items-center pr-7" do %>
    <%= inline_svg_tag("search.svg", class: "w-5 h-5 text-gray-500 hover:text-blue-500 transition duration-150") %>
  <% end %>
<% end %>
