<%= turbo_frame_tag :chat_details do %>
  <div class="p-4 h-20 border-b border-blue-100 bg-blue-50 flex items-center">
    <%= user_icon(@recipient) %>
    <div class="ml-3">
      <p class="text-sm font-medium text-gray-900"><%= @recipient.name %></p>
    </div>
  </div>

  <div class="flex-1 p-4 overflow-y-auto">
    <%= render partial: "message", collection: @messages %>
  </div>

  <!-- Message Input (placeholder) -->
  <div class="p-4 border-t bg-white">
    <div class="flex">
      <input
        type="text"
        placeholder="Write a message..."
        class="flex-1 px-4 py-2 border-none placeholder:text-gray-400 focus:outline-none focus:ring-0">
      <button class="ml-3 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-500">
        Send
      </button>
    </div>
  </div>
<% end %>
