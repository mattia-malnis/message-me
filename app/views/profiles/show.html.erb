<section class="p-8">
  <div class="flex items-center justify-center">
    <div class="h-24 w-24 bg-blue-600 rounded-full flex items-center justify-center text-white text-4xl font-semibold">
      <%= @profile.name.first %>
    </div>
  </div>

  <div class="mt-8 text-center">
    <h2 class="text-3xl font-semibold text-slate-900"><%= @profile.name %></h2>
    <p class="text-slate-500">@<%= @profile.nickname %></p>
    <p class="mt-4 text-slate-700"><%= @profile.bio %></p>
  </div>

  <div class="mt-10 text-center">
    <%= link_to "Update profile", edit_profile_path, class: "inline-block rounded-full py-2 px-4 text-sm font-semibold bg-blue-600 text-white hover:bg-blue-500" %>
    <%= link_to "Change email/password", edit_user_registration_path, class: "inline-block rounded-full py-2 px-4 text-sm font-semibold bg-slate-900 text-white hover:bg-slate-700" %>
  </div>
</section>
